<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout
            Padding="20"
            BackgroundColor="Black">
        <Label Text="ID:" 
               TextColor="White"
               FontSize="40"/>
        <Entry Placeholder="usuario@email.com"            
               BackgroundColor="WhiteSmoke"
               HorizontalTextAlignment="End"
               x:Name="entryUser"/>

        <Label Text="Senha:"
               TextColor="White"
               FontSize="40"
               />
        <Entry Placeholder="P@ssw0rd" 
               BackgroundColor="WhiteSmoke"
               Keyboard="Numeric"
               HorizontalTextAlignment="End"
               x:Name="entryPassword"/>

        <Button Text="Ok"
                Clicked="btnOk"></Button>
        <Button Text="Limpar"
                Clicked="btnClean"></Button>
        <Button Text="Créditos"
                Clicked="btnCredits"></Button>
    </StackLayout>

</ContentPage>